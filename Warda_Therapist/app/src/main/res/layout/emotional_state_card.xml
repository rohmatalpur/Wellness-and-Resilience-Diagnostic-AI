<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvEmotionalStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emotional_state"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvEmotionalState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/neutral"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <com.example.warda_therapist.EmotionalStateView
            android:id="@+id/emotionalStateView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEmotionalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/balance"
            android:textSize="14sp"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/tvViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="end"
            android:text="@string/view_details"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E28484"
            android:padding="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>